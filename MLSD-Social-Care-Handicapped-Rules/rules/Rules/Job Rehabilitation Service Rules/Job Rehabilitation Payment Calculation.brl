<?xml version="1.0" encoding="UTF-8"?>
<ilog.rules.studio.model.brl:ActionRule xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:ilog.rules.studio.model.brl="http://ilog.rules.studio/model/brl.ecore">
  <name>Job Rehabilitation Payment Calculation</name>
  <uuid>72826383-d36b-4f77-adfb-c94ee5eaa37b</uuid>
  <locale>en_US</locale>
  <definition><![CDATA[definitions
    set 'Rehabilitation Since Last Payment In Days' to the rehabilitation since last payment in days of 'the rehabilitation details' ;
    set 'Residency In Rehabilitation Center in Days' to the residency in rehabilition center in days of 'the rehabilitation details' ;
    set 'Number Of Days outside Rehabilitation Center' to 'Rehabilitation Since Last Payment In Days' - 'Residency In Rehabilitation Center in Days' ;
    set 'Married Financial Amount' to ( 'Residency In Rehabilitation Center in Days' * ( 200 / 30 ) ) + ( 'Number Of Days outside Rehabilitation Center' * ( 400 / 30 ) ) + ( 'Rehabilitation Since Last Payment In Days' * ( 200 / 30 ) ) ;
    set 'Not Married Financial Amount' to ( 'Residency In Rehabilitation Center in Days' * ( 200 / 30 ) ) + ( 'Number Of Days outside Rehabilitation Center' * ( 400 / 30 ) ) ;
if
    the marital status of 'the applicant' is MARRIED
then
    set 'job rehabilitation financial amount' to 'Married Financial Amount' ;
else
    set 'job rehabilitation financial amount' to 'Not Married Financial Amount' ;]]></definition>
</ilog.rules.studio.model.brl:ActionRule>
